<% textdomain "sap-ha" %>
<!--<h2>Installation summary</h2>-->
<table cellpadding="5">
    <tr>
        <td><b>Product:</b></td>
        <td><%= @config.product_name %></td>
    </tr>
    <tr>
        <td><b>Scenario:</b></td>
        <td><%= @config.scenario_name %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= @config.scenario['description']%>
      </td>
    </tr>
</table>

<br>

<table border="0" cellpadding="7">
    <tr>
        <td>Overall status:</td>
        <td>
            <% if !@config.can_install? %>
               <%= '<font color="red">Configuration is incomplete.</font>' %>
            <% else %>
               <%= '<font color="green">Configuration is complete.</font>' %>
            <% end %>
        </td>
    </tr>
    <tr>
        <th colspan="2">Configuration steps</th>
    </tr>
    <tr>
        <td>Cluster:</td>
        <td>
            <% if !@config.cluster.configured? %>
            <%= '<font color="red">Not configured</font> (<a href="config_cluster">configure</a>)' %>
            <% else %>
            <%= '<font color="green">Configured</font> (<a href="config_cluster">reconfigure</a>)<br>' %>
            <%= @config.cluster.description %>
            <% end %>
        </td>
    </tr>
    <tr>
        <td>NTP Client:</td>
        <td>
            <% if !@config.ntp.configured? %>
            <%= '<font color="red">Not configured</font> (<a href="ntp">configure</a>)' %>
            <% else %>
            <%= '<font color="green">Configured</font> (<a href="ntp">reconfigure</a>)<br>' %>
            <%= @config.ntp.description %>
            <% end %>
        </td>
    </tr>
    <tr>
        <td>Fencing (STONITH):</td>
        <td>
            <% if !@config.fencing.configured? %>
            <%= '<font color="red">Not configured</font> (<a href="fencing">configure</a>)' %>
            <% else %>
            <%= '<font color="green">Configured</font> (<a href="fencing">reconfigure</a>)<br>' %>
            <%= @config.fencing.description %>
            <% end %>
        </td>
    </tr>
    <tr>
        <td>Watchdog:</td>
        <td>
            <% if !@config.watchdog.configured? %>
            <%= '<font color="red">Not configured</font> (<a href="watchdog">configure</a>)' %>
            <% else %>
            <%= '<font color="green">Configured</font> (<a href="watchdog">reconfigure</a>)<br>' %>
            <%= @config.watchdog.description %>
            <% end %>
        </td>
    </tr>
    <% if @config.product_id == 'HANA' %>
    <tr>
        <td>HANA configuration:</td>
        <td>
            <% if !@config.hana.configured? %>
            <%= '<font color="red">Not configured</font> (<a href="hana">configure</a>)' %>
            <% else %>
            <%= '<font color="green">Configured</font> (<a href="hana">reconfigure</a>)<br>' %>
            <%= @config.hana.description %>
            <% end %>
        </td>
    </tr>
    <% end %>
</table>
